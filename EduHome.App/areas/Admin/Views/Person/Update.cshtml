@model Person
<div class="container">
	<form method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label asp-for="Name"></label>
			<input type="text" class="form-control" asp-for="Name" />
			<span class="text text-danger" asp-validation-for="Name"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description"></label>
			<input type="text" class="form-control" asp-for="Description" />
			<span class="text text-danger" asp-validation-for="Description"></span>
		</div>
		<div class="form-group">
			<label asp-for="Position"></label>
			<input type="text" class="form-control" asp-for="Position" />
			<span class="text text-danger" asp-validation-for="Position"></span>
		</div>
		<div class="form-group">
			<label asp-for="Image"></label>
			<input accept="image/*" type="file" class="form-control" asp-for="FormFile" />
			<span class="text text-danger" asp-validation-for="FormFile"></span>
		</div>
		<img style="width:200px;height:200px;" src="~/assets/img/@Model.Image" />
		@Html.AntiForgeryToken()
		<button type="submit">Update</button>
	</form>
</div>
