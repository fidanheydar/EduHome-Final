@model IEnumerable<Course>
<div class="container">
    <table class="table table-lg">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Starting Date</th>
                <th scope="col">Ending Date</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.Name</th>
                    <th><img style="width:100px;height:100px" src="~/assets/img/@item.Image" /></th>
                    <th>@item.StartDate.Day/@item.StartDate.Month/@item.StartDate.Year</th>
                    <th>@item.EndDate.Day/@item.EndDate.Month/@item.EndDate.Year</th>

                    <td>
                        <a asp-controller="course" asp-action="update" asp-route-id="@item.Id">
                            <i class="fas fa-edit text text-primary"></i>
                        </a>
                    </td>
                    <td><a onclick="if (!confirm('Delete selected item?')){return false;}" asp-controller="course" asp-action="Delete" asp-route-id="@item.Id" class=" delete-item"><i class="fas fa-trash text text-danger"></i></a></td>

                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="course" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a>
            <div style="width:100%; " class="btn btn-outline-success">Create Course</div>
        </a>
    </div>
</div>
