@model Teacher
<div class="container">
    <form asp-action="create" asp-controller="Teacher" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Fullname">FullName</label>
            <input type="text" class="form-control" asp-for="@Model.Fullname">
            <span class="text text-danger" asp-validation-for="@Model.Fullname"></span>
            @Html.AntiForgeryToken()
        </div>

        <div class="form-group">
            <label asp-for="Email">Mail</label>
            <input type="text" class="form-control" asp-for="@Model.Email">
            <span class="text text-danger" asp-validation-for="@Model.Email"></span>
            @Html.AntiForgeryToken()
        </div>

        <div class="form-group">
            <label asp-for="Experience">Experience Year</label>
            <input type="text" class="form-control" asp-for="@Model.Experience">
            <span class="text text-danger" asp-validation-for="@Model.Experience"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label asp-for="About">About</label>
            <input type="text" class="form-control" asp-for="@Model.About">
            <span class="text text-danger" asp-validation-for="@Model.About"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone Number</label>
            <input type="text" class="form-control" asp-for="@Model.Phone">
            <span class="text text-danger" asp-validation-for="@Model.Phone"></span>
            @Html.AntiForgeryToken()
        </div>

        <div class="form-group">
            <label asp-for="Faculty">Faculty</label>
            <input type="text" class="form-control" asp-for="@Model.Faculty">
            <span class="text text-danger" asp-validation-for="@Model.Faculty"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label asp-for="Faculty">Faculty</label>
            <input type="text" class="form-control" asp-for="@Model.Skype">
            <span class="text text-danger" asp-validation-for="@Model.Skype"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label asp-for="Faculty">Faculty</label>
            <input type="text" class="form-control" asp-for="@Model.Speciality">
            <span class="text text-danger" asp-validation-for="@Model.Speciality"></span>
            @Html.AntiForgeryToken()
        </div>
        <div class="form-group">
            <label asp-for="Faculty">Faculty</label>
            <input type="text" class="form-control" asp-for="@Model.Degree">
            <span class="text text-danger" asp-validation-for="@Model.Degree"></span>
            @Html.AntiForgeryToken()
        </div>

        <div class="mb-3 col-md-6">
            <label asp-for="Image" class="form-label">Image</label>
            <input accept="image"
                   class="form-control"
                   type="file"
                   name="file" />
            <span class="text text-danger" asp-validation-for="FormFile"></span>

        </div>

        <div class="form-group">
            <label asp-for="HobbyIds">Hobbies</label>
            <select multiple asp-for="HobbyIds" class="form-select" aria-label="Default select example">
                @foreach (var item in ViewBag.Hobbies)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span asp-validation-for="HobbyIds" class="text text-danger"></span>
        </div>
        <button style=" background-color:pink" type="submit">Create</button>
    </form>
</div>