                            <h2>login</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                                <span class="text text-danger" asp-validation-for="Username"></span>
                                <input asp-for="Username" placeholder="Username">
                                <span class="text text-danger" asp-validation-for="Password"></span>
                                <input type="password" asp-for="Password" placeholder="Password">
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input type="checkbox" id="remember">
                                        <span class="text text-danger" asp-validation-for="RememberMe"></span>
                                        <label for="remember">Remember me</label>
                                        <a href="#">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
